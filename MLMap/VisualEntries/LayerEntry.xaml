<UserControl x:Class="VisualEntries.LayerEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualEntries"
             mc:Ignorable="d" Height="32" Width="160">
    <Grid Background="LightGray">
        <Border Background="GhostWhite" BorderThickness="1">
            <Grid>
                <CheckBox IsChecked="{Binding Visible}" ToolTip="Is visible" Opacity=".8" VerticalContentAlignment="Center" Margin="10,0,0,0.4" HorizontalAlignment="Left" Width="16" />
                <Label Content="{Binding LayerName}" HorizontalContentAlignment="Left" FontSize ="14" FontWeight="Bold" Margin="31,0,0.4,0.4"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
